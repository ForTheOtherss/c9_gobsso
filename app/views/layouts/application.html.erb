          <h1>
            <%= link_to 'Get<i class="far fa-handshake"></i>Together'.html_safe, 
            root_path, :class => "logo_white" %>
          </h1>
        </div>
        <!-- GNB -->
        <nav class="gnb_nav">
          <ul>
          <% if user_signed_in? %>
            <li><a href="#">마이페이지</a></li>
            <li><%= link_to '로그아웃', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to '회원가입', new_user_registration_path %></li>
            <li><%= link_to '로그인', new_user_session_path %></li>
          <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </header>
  

<%= yield %>


