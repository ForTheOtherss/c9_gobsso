  <!-- Container -->
  <div>검색창(Gem 이용)</div>
  <br><br>
  <div class="club_menu">
    <ul>
      <li><a href="#" class="club_menu_click">전체</a></li>
      <li><a href="#">면접</a></li>
      <li><a href="#">영어</a></li>
      <li><a href="#">제2외국어</a></li>
      <li><a href="#">NCS</a></li>
      <li><a href="#">컴퓨터</a></li>
      <li><a href="#">독서</a></li>
      <li><a href="#">기타</a></li>
    </ul>
  </div>
  <div>
    <hr class="club_hr border-color2">
  </div>


  <div class="club_content1 mgn_layout_fixed">

  </div>

  <!-- 검색 기능 -->
  <div class="study_btn_wrap border-color1 mgn_layout_fixed">
    <span class="border-color1 bg-color1">유형</span>
    <label>
      <input type="checkbox">
      전체
    </label>
    <label>
      <input type="checkbox">
      토익
    </label>
    <label>
      <input type="checkbox">
      토플
    </label>
    <label>
      <input type="checkbox">
      토스
    </label>
    <label>
      <input type="checkbox">
      OPic
    </label>
    <label>
      <input type="checkbox">
      기타
    </label>
    <input type="submit" value="확인" class="study_submit_btn bg-color1">

  </div>


  <!-- 게시판 -->
  <div class="study_board mgn_layout_fixed">
    <h1>모집중인 스터디</h1>
    <table class="club_board border-color2">
      <thead>
        <tr>
          <th class="sutdy_col1">No.</th>
          <th class="study_col2">제목</th>
          <th class="study_col3">작성자</th>
          <th class="study_col4">작성일</th>
          <th class="study_col5">여석</th>
          <th class="study_col6">조회수</th>
        </tr>
      </thead>
      <% number = 0 %>
      <% @notes.reverse_each do |note| %>
        <% number = number + 1 %>
      <tbody>
            <tr>
              <td>
                <%= number %>
              </td>
              <td>
                <a href='/study/<%= note.id %>'> <%= note.title %> </a>
              </td>
              <td>
                <%= note.user.name%>
              </td>
              <td>
                <%= note.created_at.strftime("%Y-%m-%d") %>
              </td>
              <td>
                3/4
              </td>
              <td>
                13
              </td>
            </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  
<a href='/study/new'>새 글 작성</a>
